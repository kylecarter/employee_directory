<header id="hero">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="page-header">
						{{#if avatar}}
						<figure id="avatar"><img src="{{ avatar }}" alt="user profile photo"></figure>
						{{else}}
						<figure id="avatar"><span>&#xf007;</span></figure>
						{{/if}}
						<h1>{{ first_name }} {{ last_name }} <br> <small>{{ title }}</small></h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
<section id="content" class="usr-profile" data-id="{{ _id }}" data-admin="{{ admin }}">
	<div class="container">
 		{{#if admin}}
		<div class="row">
			<div class="col-sm-12">
				<div id="employee-add"><button class="btn btn-primary js-modal-trigger" data-toggle="modal" data-target="#myModal">Add Employee</button></div>
			</div>
		</div>
		{{/if}}
		<div class="row" id="wrapper">
			<div class="col-sm-12">

			</div>
		</div>
	</div>
</section>
