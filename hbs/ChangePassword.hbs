<form class="modal-dialog" id="ChangePassword">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Change Password</h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <label for="old" class="no-placeholder">Previous Password</label>
        <input type="password" name="old" id="old" placeholder="Previous Password" class="form-control">
      </div>
      <div class="form-group">
        <label for="diffrnt" class="no-placeholder">New Password</label>
        <input type="password" name="diffrnt" id="diffrnt" placeholder="New Password" class="form-control">
      </div>
      <div class="form-group">
        <label for="confirm" class="no-placeholder">Confirm Password</label>
        <input type="password" name="confirm" id="confirm" placeholder="Confirm Password" class="form-control">
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</form>
